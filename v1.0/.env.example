##############################################
# üõ†Ô∏è REQUIRED FOR FIRST-TIME SETUP (setup.sh) #
##############################################

# Timezone to configure on the backup VM
TIMEZONE="America/Los_Angeles"

# GitHub username (used for SSH key setup)
GITHUB_USERNAME="your-github-username"

# DNS setup (used by setup.sh for resolv.conf)
DNS="8.8.8.8 1.1.1.1"
FALLBACK_DNS="9.9.9.9 1.0.0.1"

# Backup host details (usually your backup server's Tailscale IP)
BACKUP_HOST="ubuntu@your.remote.ip" # Fill in after Tailscale setup
SSH_KEY="/home/ubuntu/.ssh/id_rsa"  # Adjust if using custom SSH key

# Enable Tailscale and provide your auth key
USE_TAILSCALE_AUTH_KEY=true
TAILSCALE_AUTH_KEY="tskey-auth-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"


###########################################################
# ‚è¨ OPTIONAL: POST-SETUP CONFIG FOR BACKUP/IMPORT SCRIPTS #
###########################################################

# Cron schedule for backup_mirror.sh on the source server
CRON_SCHEDULE="0 2 * * *"

# MariaDB database credentials
DB_USER="yourdbuser"
DB_PASSWORD="yourdbpassword"
DB_HOST="localhost"
DB_DUMP_FILE="/home/ubuntu/backups/db_dumps/mariadb_backup.sql"

# Folders to sync and restart during backup/import
FOLDERS=("velocity" "mc1" "mc2" "mc3")
SERVICES=("velocity" "mc1" "mc2" "mc3")

# Discord webhook integration (optional)
ENABLE_DISCORD=true
ENABLE_DISCORD_IMPORT=true
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your_webhook_url"

# Configuration rewrite rules on restore
# Format: /path/to/file;find_this;replace_with
CONFIG_UPDATES=(
  "/home/ubuntu/mc1/plugins/ItemsAdder/config.yml;oldip;newip"
  "/home/ubuntu/mc2/plugins/ItemsAdder/config.yml;oldpack.url;newpack.url"
  "/home/ubuntu/mc3/plugins/ItemsAdder/config.yml;oldpack.url;newpack.url"
  "/home/ubuntu/velocity/velocity.toml;oldmcserver.url;newmcserver.url"
)

# Feature toggles (advanced control)
ENABLE_FOLDERS=true
ENABLE_SERVICES=true
ENABLE_DATABASE=true
ENABLE_REMOTE_IMPORT=true
RESTART_SERVICES=true
